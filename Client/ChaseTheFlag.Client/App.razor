

<CascadingAuthenticationState>
    <Router AppAssembly="@typeof(App).Assembly">
        <Found Context="routeData">
            <AuthorizeRouteView RouteData="@routeData" DefaultLayout="@typeof(MainLayout)">
                <NotAuthorized>
                    <Login />
                </NotAuthorized>
            </AuthorizeRouteView>
        </Found>
        <NotFound>
            <AuthorizeView>
                <NotAuthorized>
                    <LoginError />
                </NotAuthorized>
                <Authorized>
                    <NotFound />
                </Authorized>
            </AuthorizeView>
        </NotFound>
    </Router>
</CascadingAuthenticationState>